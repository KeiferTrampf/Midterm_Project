<%- include('./partials/header.ejs', { title }) %>

<style>
  @scope (#home-empty) {
    :scope {
      background-color: #18191a;
      min-height: 100vh;
    }
  }
  @scope (#notes-main) {
    :scope {
      background-color: #18191a;
      min-height: 100vh;
    }
  }
</style>

<% if (!notes || notes.length === 0) { %>
  <main id="home-empty">
    <div class="container-fluid d-flex justify-content-center align-items-center min-vh-100 bg-dark">
      <div class="card shadow-lg border-0 rounded-4" style="width: 22rem; background: #23272f;">
        <div class="card-body d-flex flex-column align-items-center">
          <h5 class="card-title text-center mb-4 text-light">No Notes Yet</h5>
          <a href="/add" class="btn btn-primary w-100 rounded-pill fw-bold">New Note</a>
        </div>
      </div>
    </div>
  </main>
<% } else { %>
  <main id="notes-main">
    <div class="container-fluid min-vh-100 bg-dark d-flex flex-column align-items-center py-5">
      <h1 class="text-light mb-4"><%= title %></h1>
      <div class="row w-100 g-4 justify-content-center">
        <% notes.map(note => { %>
          <div class="col-12 col-sm-6 col-md-4 col-lg-3 d-flex justify-content-center">
            <%- include('./components/note.ejs', { note })  %>
          </div>
        <% }) %>
      </div>
      <div class="mt-4 w-100 d-flex justify-content-center">
        <a href="/add" class="btn btn-primary rounded-pill fw-bold px-4">New Note</a>
      </div>
    </div>
  </main>
<% } %>
<script src="/js/bootstrap.bundle.min.js"></script>

<%- include('./partials/footer.ejs') %>